<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_edit_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_title_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FF141414"
        />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="#FF00FF00"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="最近项目"/>


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:scaleType="centerInside"
        android:src="@drawable/picture_icon_arrow_down"
        android:layout_toRightOf="@+id/tv_title"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="#FFFFFFFF"
        android:text="下一步"/>

    <com.example.gallery.RecyclerPreloadView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:overScrollMode="never"
        android:layout_below="@+id/v_title_bar_bg"/>




</RelativeLayout>